<div ng-controller="RootController">

    <aside style="width: 100px">
        <div class=" box red">
            <br />
            <br/>
            Dashboard
        </div>
        <div class=" box green">
            <br />
            <br />
            Trips
        </div>
        <div class=" box orange">
            <br />
            <br />
            KPIs
        </div>
        <div class=" box blue">
            <br />
            <br />
            Reports
        </div>
        <div class=" box indigo">
            <br />
            <br/>
            Settings
        </div>
    </aside>
    <div class="content">
        <div class="toolbar">
            <div class="row">
                <div class="col-md-6">
                    Product: <select class="form-control">
                        <option ng-repeat="p in products">{{p}}</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <input class="" type="checkbox" value="one" />&nbsp;&nbsp;Source
                    <input class="" type="checkbox" value="one" />&nbsp;&nbsp;Delivery Point
                    <input class="" type="checkbox" value="one" />&nbsp;&nbsp;Depot
                </div>
            </div>

        </div>
        <ui-gmap-google-map center='map.center'
                            zoom='map.zoom' aria-label="Google map">

            <ui-gmap-marker ng-repeat="marker in markers"
                            coords="marker.coords" options="marker.options" events="marker.events" idkey="marker.id">
                <ui-gmap-window>
                    <div>
                        <b>{{marker.data.title}}</b><br />
                        {{marker.data.subtitle}}<br />
                        {{marker.data.tel}}<br/>
                    </div>
                </ui-gmap-window>
            </ui-gmap-marker>

        </ui-gmap-google-map>
    </div>

</div>